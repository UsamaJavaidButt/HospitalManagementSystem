<h1> Doctors Added</h1>
<table class="table table-sm table-striped ml-4" style="max-width: 50rem;">
  <thead>
    <th>Doctor Name</th>
    <tr>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @doctor_added.each do |user|%>
      <tr>
        <td><%=user.name %></td>
        <td><%= link_to "Remove to Hospital" , hospital_doctor_remove_doctor_path(@hospital.id,user.id),:class=>"btn btn-outline-primary"%></td>
      <% end%>
    </tbody>
  </table>
  <h1> ALL Doctors </h1>
  <table class="table table-sm table-striped ml-4" style="max-width: 50rem;">
    <thead>
      <th>Doctor Name</th>
      <tr>
        <th colspan="5"></th>
      </tr>
    </thead>
    <tbody>
      <% @doctor_not_added.each do |user|%>
        <tr>
          <td><%=user.name %></td>
          <td><%= link_to "Add to Hospital" , hospital_doctor_add_doctor_path(@hospital.id,user.id),:class=>"btn btn-outline-primary"%></td>
        <% end%>
      </tbody>
    </table>
    <%= link_to "Back", hospitals_path, :class=>"btn btn-outline-primary mx-5"%>
