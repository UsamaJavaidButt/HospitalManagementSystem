<h1> Edit this Hospital item</h1>
<%= form_for(@hospital) do |f| %>
  <div class="form-group row col-md-6 px-5">
    <div class="form-group">
      <%= f.label :name , :class=>"col-form-label col-md-1"%>
      <%= f.text_field :name, :class => 'col-md-1 form-control', :required => true %>
    </div>
    <div class="form-group">
      <%= f.label :city , :class=>"col-form-label col-md-1"%>
      <%= f.text_field :city, :class => 'col-md-1 form-control', :required => true %>
    </div>
    <div class="form-group">
      <%= f.label :address , :class=>"col-form-label col-md-1"%>
      <%= f.text_field :address, :class => 'col-md-1 form-control', :required => true %>
    </div>
    <div class="actions">
      <%= f.submit :class => 'float-right btn btn-outline-primary'%>
    </div>
  </div>
<% end %>
