<h1> Edit this Treatment item</h1>
<%= form_for(@treatment, url:"/hospitals/hospital_id/treatments/#{@treatment.id}") do |f| %>
  <div class="form-group row col-md-6 px-5">
    <div class="form-group">
      <%= f.label :name , :class=>"col-form-label col-md-1"%>
      <%= f.text_field :name, :class => 'col-md-1 form-control', :required => true %>
    </div>
    <div class="actions">
      <%= f.submit :class => 'float-right btn btn-outline-primary'%>
    </div>
  </div>
<% end %>
